  "components": {
    "schemas": {
      "CitationBatchRequest": {
        "properties": {
          "language": {
            "type": "string",
            "title": "Language"
          },
          "citations": {
            "items": {
              "prefixItems": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ],
              "type": "array",
              "maxItems": 2,
              "minItems": 2
            },
            "type": "array",
            "title": "Citations"
          }
        },
        "type": "object",
        "required": [
          "language",
          "citations"
        ],
        "title": "CitationBatchRequest",
        "description": "Request model for batch citation endpoint."
      },
      "CitationBatchResponse": {
        "properties": {
          "successes": {
            "items": {
              "$ref": "#/components/schemas/CitationResponse"
            },
            "type": "array",
            "title": "Successes"
          },
          "errors": {
            "items": {
              "$ref": "#/components/schemas/CitationError"
            },
            "type": "array",
            "title": "Errors"
          }
        },
        "type": "object",
        "required": [
          "successes",
          "errors"
        ],
        "title": "CitationBatchResponse",
        "description": "Response model for batch citation endpoint."
      },
      "CitationError": {
        "properties": {
          "file_id": {
            "type": "string",
            "title": "File Id"
          },
          "chunk_index": {
            "type": "integer",
            "title": "Chunk Index"
          },
          "error": {
            "type": "string",
            "title": "Error"
          }
        },
        "type": "object",
        "required": [
          "file_id",
          "chunk_index",
          "error"
        ],
        "title": "CitationError",
        "description": "Error details for a failed citation fetch."
      },
      "CitationResponse": {
        "properties": {
          "file_id": {
            "type": "string",
            "title": "File Id"
          },
          "chunk_index": {
            "type": "integer",
            "title": "Chunk Index"
          },
          "content": {
            "type": "string",
            "title": "Content"
          },
          "metadata": {
            "additionalProperties": true,
            "type": "object",
            "title": "Metadata"
          },
          "total_chunks": {
            "type": "integer",
            "title": "Total Chunks"
          },
          "file_info": {
            "$ref": "#/components/schemas/LibraryFileInfo"
          }
        },
        "type": "object",
        "required": [
          "file_id",
          "chunk_index",
          "content",
          "metadata",
          "total_chunks",
          "file_info"
        ],
        "title": "CitationResponse",
        "description": "Response model for citation content endpoint."
      },
      "ConversationResponse": {
        "properties": {
          "uuid": {
            "type": "string",
            "title": "Uuid"
          },
          "language": {
            "type": "string",
            "title": "Language"
          },
          "question": {
            "type": "string",
            "title": "Question"
          },
          "answer": {
            "type": "string",
            "title": "Answer"
          },
          "model": {
            "type": "string",
            "title": "Model"
          },
          "k": {
            "type": "integer",
            "title": "K"
          },
          "created_at": {
            "type": "number",
            "title": "Created At"
          },
          "generation_time_seconds": {
            "type": "number",
            "title": "Generation Time Seconds"
          },
          "short_slug": {
            "type": "string",
            "title": "Short Slug"
          }
        },
        "type": "object",
        "required": [
          "uuid",
          "language",
          "question",
          "answer",
          "model",
          "k",
          "created_at",
          "generation_time_seconds",
          "short_slug"
        ],
        "title": "ConversationResponse",
        "description": "Response model for conversation retrieval."
      },
      "ExampleQuestionResponse": {
        "properties": {
          "question": {
            "type": "string",
            "title": "Question"
          },
          "language": {
            "type": "string",
            "title": "Language"
          }
        },
        "type": "object",
        "required": [
          "question",
          "language"
        ],
        "title": "ExampleQuestionResponse",
        "description": "Response model for example question endpoint."
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "LibraryCategoriesResponse": {
        "properties": {
          "categories": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Categories"
          }
        },
        "type": "object",
        "required": [
          "categories"
        ],
        "title": "LibraryCategoriesResponse",
        "description": "Response model for library categories endpoint."
      },
      "LibraryFileInfo": {
        "properties": {
          "category": {
            "type": "string",
            "title": "Category"
          },
          "title": {
            "type": "string",
            "title": "Title"
          },
          "id": {
            "type": "integer",
            "title": "Id"
          },
          "relative_path": {
            "type": "string",
            "title": "Relative Path"
          }
        },
        "type": "object",
        "required": [
          "category",
          "title",
          "id",
          "relative_path"
        ],
        "title": "LibraryFileInfo",
        "description": "File information with parsed components."
      },
      "LibraryFileResponse": {
        "properties": {
          "file_info": {
            "$ref": "#/components/schemas/LibraryFileInfo"
          },
          "content": {
            "type": "string",
            "title": "Content"
          }
        },
        "type": "object",
        "required": [
          "file_info",
          "content"
        ],
        "title": "LibraryFileResponse",
        "description": "Response model for library file content endpoint."
      },
      "LibraryFilesResponse": {
        "properties": {
          "files": {
            "items": {
              "$ref": "#/components/schemas/LibraryFileInfo"
            },
            "type": "array",
            "title": "Files"
          }
        },
        "type": "object",
        "required": [
          "files"
        ],
        "title": "LibraryFilesResponse",
        "description": "Response model for library files endpoint."
      },
      "LibraryRetrieveRequest": {
        "properties": {
          "language": {
            "type": "string",
            "title": "Language"
          },
          "query": {
            "type": "string",
            "title": "Query"
          },
          "k": {
            "type": "integer",
            "title": "K"
          },
          "semantic": {
            "type": "boolean",
            "title": "Semantic",
            "default": false
          },
          "chunk_context": {
            "type": "integer",
            "title": "Chunk Context",
            "default": 0
          }
        },
        "type": "object",
        "required": [
          "language",
          "query",
          "k"
        ],
        "title": "LibraryRetrieveRequest",
        "description": "Request model for library retrieval endpoint."
      },
      "LibraryRetrieveResponse": {
        "properties": {
          "query": {
            "type": "string",
            "title": "Query"
          },
          "results": {
            "items": {
              "$ref": "#/components/schemas/LibraryRetrieveResult"
            },
            "type": "array",
            "title": "Results"
          }
        },
        "type": "object",
        "required": [
          "query",
          "results"
        ],
        "title": "LibraryRetrieveResponse",
        "description": "Response model for library retrieval endpoint."
      },
      "LibraryRetrieveResult": {
        "properties": {
          "file_info": {
            "$ref": "#/components/schemas/LibraryFileInfo"
          },
          "snippet": {
            "type": "string",
            "title": "Snippet"
          },
          "score": {
            "type": "number",
            "title": "Score"
          }
        },
        "type": "object",
        "required": [
          "file_info",
          "snippet",
          "score"
        ],
        "title": "LibraryRetrieveResult",
        "description": "Single retrieved library document with snippet."
      },
      "ModelsResponse": {
        "properties": {
          "models": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Models"
          }
        },
        "type": "object",
        "required": [
          "models"
        ],
        "title": "ModelsResponse",
        "description": "Response model for available models endpoint."
      },
      "QueryRequest": {
        "properties": {
          "language": {
            "type": "string",
            "title": "Language"
          },
          "question": {
            "type": "string",
            "title": "Question"
          },
          "model": {
            "type": "string",
            "title": "Model"
          },
          "k": {
            "type": "integer",
            "title": "K"
          },
          "chunk_context": {
            "type": "integer",
            "title": "Chunk Context"
          }
        },
        "type": "object",
        "required": [
          "language",
          "question",
          "model",
          "k",
          "chunk_context"
        ],
        "title": "QueryRequest",
        "description": "Request model for query endpoint."
      },
      "QueryResponse": {
        "properties": {
          "language": {
            "type": "string",
            "title": "Language"
          },
          "question": {
            "type": "string",
            "title": "Question"
          },
          "answer": {
            "type": "string",
            "title": "Answer"
          },
          "conversation_uuid": {
            "type": "string",
            "title": "Conversation Uuid"
          },
          "short_slug": {
            "type": "string",
            "title": "Short Slug"
          }
        },
        "type": "object",
        "required": [
          "language",
          "question",
          "answer",
          "conversation_uuid",
          "short_slug"
        ],
        "title": "QueryResponse",
        "description": "Response model for query endpoint."
      },
      "ShortURLResponse": {
        "properties": {
          "slug": {
            "type": "string",
            "title": "Slug"
          },
          "target_path": {
            "type": "string",
            "title": "Target Path"
          }
        },
        "type": "object",
        "required": [
          "slug",
          "target_path"
        ],
        "title": "ShortURLResponse",
        "description": "Response model for short URL resolution."
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          },
          "input": {
            "title": "Input"
          },
          "ctx": {
            "type": "object",
            "title": "Context"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      },
      "VersionResponse": {
        "properties": {
          "checkpoint_versions": {
            "additionalProperties": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "type": "object",
            "title": "Checkpoint Versions"
          }
        },
        "type": "object",
        "required": [
          "checkpoint_versions"
        ],
        "title": "VersionResponse",
        "description": "Response model for version endpoint."
      }
    }
  }
}
