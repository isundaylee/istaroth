    "/api/version": {
      "get": {
        "tags": [
          "version"
        ],
        "summary": "Get Version",
        "description": "Get version information.",
        "operationId": "get_version_api_version_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VersionResponse"
