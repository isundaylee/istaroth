{
  "openapi": "3.1.0",
  "info": {
    "title": "Istaroth Web API",
    "description": "API for the Istaroth Web",
    "version": "1.0.0"
  },
  "paths": {
    "/api/query": {
      "post": {
        "tags": [
          "query"
        ],
        "summary": "Query",
        "description": "Answer a question using the RAG pipeline.",
        "operationId": "query_api_query_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QueryRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/QueryResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/conversations/{conversation_uuid}": {
      "get": {
        "tags": [
          "conversations"
        ],
        "summary": "Get Conversation",
        "description": "Get a specific conversation by ID.",
        "operationId": "get_conversation_api_conversations__conversation_uuid__get",
        "parameters": [
          {
            "name": "conversation_uuid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "title": "Conversation Uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConversationResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/models": {
      "get": {
        "tags": [
          "models"
        ],
        "summary": "Get Models",
        "description": "Get list of available models.",
        "operationId": "get_models_api_models_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ModelsResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/example-question": {
      "get": {
        "tags": [
          "examples"
        ],
        "summary": "Get Example Question",
        "description": "Get a random example question for the specified language.",
        "operationId": "get_example_question_api_example_question_get",
        "parameters": [
          {
            "name": "language",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "default": "eng",
              "title": "Language"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ExampleQuestionResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/citations/{file_id}/{chunk_index}": {
      "get": {
        "tags": [
          "citations"
        ],
        "summary": "Get Citation",
        "description": "Get citation content by file ID and chunk index.",
        "operationId": "get_citation_api_citations__file_id___chunk_index__get",
        "parameters": [
          {
            "name": "file_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "title": "File Id"
            }
          },
          {
            "name": "chunk_index",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "title": "Chunk Index"
            }
          },
          {
            "name": "language",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "title": "Language"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CitationResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CitationResponse": {
        "properties": {
          "file_id": {
            "type": "string",
            "title": "File Id"
          },
          "chunk_index": {
            "type": "integer",
            "title": "Chunk Index"
          },
          "content": {
            "type": "string",
            "title": "Content"
          },
          "metadata": {
            "additionalProperties": true,
            "type": "object",
            "title": "Metadata"
          },
          "total_chunks": {
            "type": "integer",
            "title": "Total Chunks"
          }
        },
        "type": "object",
        "required": [
          "file_id",
          "chunk_index",
          "content",
          "metadata",
          "total_chunks"
        ],
        "title": "CitationResponse",
        "description": "Response model for citation content endpoint."
      },
      "ConversationResponse": {
        "properties": {
          "uuid": {
            "type": "string",
            "title": "Uuid"
          },
          "language": {
            "type": "string",
            "title": "Language"
          },
          "question": {
            "type": "string",
            "title": "Question"
          },
          "answer": {
            "type": "string",
            "title": "Answer"
          },
          "model": {
            "type": "string",
            "title": "Model"
          },
          "k": {
            "type": "integer",
            "title": "K"
          },
          "created_at": {
            "type": "number",
            "title": "Created At"
          },
          "generation_time_seconds": {
            "type": "number",
            "title": "Generation Time Seconds"
          }
        },
        "type": "object",
        "required": [
          "uuid",
          "language",
          "question",
          "answer",
          "model",
          "k",
          "created_at",
          "generation_time_seconds"
        ],
        "title": "ConversationResponse",
        "description": "Response model for conversation retrieval."
      },
      "ExampleQuestionResponse": {
        "properties": {
          "question": {
            "type": "string",
            "title": "Question"
          },
          "language": {
            "type": "string",
            "title": "Language"
          }
        },
        "type": "object",
        "required": [
          "question",
          "language"
        ],
        "title": "ExampleQuestionResponse",
        "description": "Response model for example question endpoint."
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "ModelsResponse": {
        "properties": {
          "models": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Models"
          }
        },
        "type": "object",
        "required": [
          "models"
        ],
        "title": "ModelsResponse",
        "description": "Response model for available models endpoint."
      },
      "QueryRequest": {
        "properties": {
          "language": {
            "type": "string",
            "title": "Language"
          },
          "question": {
            "type": "string",
            "title": "Question"
          },
          "model": {
            "type": "string",
            "title": "Model"
          },
          "k": {
            "type": "integer",
            "title": "K"
          },
          "chunk_context": {
            "type": "integer",
            "title": "Chunk Context"
          }
        },
        "type": "object",
        "required": [
          "language",
          "question",
          "model",
          "k",
          "chunk_context"
        ],
        "title": "QueryRequest",
        "description": "Request model for query endpoint."
      },
      "QueryResponse": {
        "properties": {
          "language": {
            "type": "string",
            "title": "Language"
          },
          "question": {
            "type": "string",
            "title": "Question"
          },
          "answer": {
            "type": "string",
            "title": "Answer"
          },
          "conversation_uuid": {
            "type": "string",
            "title": "Conversation Uuid"
          }
        },
        "type": "object",
        "required": [
          "language",
          "question",
          "answer",
          "conversation_uuid"
        ],
        "title": "QueryResponse",
        "description": "Response model for query endpoint."
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}
