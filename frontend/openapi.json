    "/api/library/retrieve": {
      "post": {
        "tags": [
          "library"
        ],
        "summary": "Retrieve Library",
        "description": "Retrieve library documents using BM25 or hybrid semantic search.",
        "operationId": "retrieve_library_api_library_retrieve_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LibraryRetrieveRequest"
              }
            }
