        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ExampleQuestionResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/citations/batch": {
      "post": {
        "tags": [
          "citations"
        ],
        "summary": "Get Citations Batch",
        "description": "Get multiple citations in a single request.\n\nSupports fetching different chunks from different files.\nReturns partial results with successes and errors separated.",
        "operationId": "get_citations_batch_api_citations_batch_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CitationBatchRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CitationBatchResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/library/categories": {
      "get": {
        "tags": [
          "library"
        ],
        "summary": "Get Categories",
        "description": "Get list of all categories for a language.",
        "operationId": "get_categories_api_library_categories_get",
        "parameters": [
          {
            "name": "language",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "description": "Language code (CHS, ENG)",
              "title": "Language"
            },
            "description": "Language code (CHS, ENG)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LibraryCategoriesResponse"
