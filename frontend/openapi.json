    "/api/short-urls/{slug}": {
      "get": {
        "tags": [
          "short-urls"
        ],
        "summary": "Resolve Short Url",
        "description": "Resolve a short URL slug to its target path.",
        "operationId": "resolve_short_url_api_short_urls__slug__get",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
